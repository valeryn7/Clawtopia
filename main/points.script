go.property("score", 0)

local function update_score_display(self)
	label.set_text("#score_label", tostring(self.score))
end

function init(self)
	msg.post(".", "acquire_input_focus")
	update_score_display(self)
end

function on_message(self, message_id, message, sender)
	if message_id == hash("add_points") then
		self.score = self.score + message.points
		update_score_display(self)
	end
end
